/* General Styles */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #e0e0e0; /* Light gray background for the entire page */
    color: #333; /* Dark text color for readability */
}

/* Container Styles */
.container {
    max-width: 1200px; /* Maximum width for the container */
    margin: 0 auto; /* Center container horizontally */
    padding: 20px; /* Padding inside the container */
}

/* Header Styles */
header {
    background-color: #282c34; /* Dark background for header */
    color: white;
    text-align: center;
    padding: 20px;
}

header h1 {
    margin: 0;
    font-size: 2.5em; /* Larger font size for the header */
}

/* Main Content Styles */
main {
    padding: 20px;
    background: white; /* White background for main content */
    border-radius: 8px; /* Rounded corners */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
}

/* Image Styles */
img {
    max-width: 100%; /* Ensure image is responsive */
    height: auto; /* Maintain aspect ratio */
    display: block;
    margin: 0 auto; /* Center image horizontally */
    border-radius: 8px; /* Rounded corners for images */
}

/* Paragraph Styles */
#description {
    font-size: 1.2em; /* Slightly larger font size for description */
    margin-bottom: 20px; /* Space below the paragraph */
    line-height: 1.6; /* Improved readability */
}

/* Heading Styles */
h2 {
    color: #282c34; /* Darker color for sub-headings */
    margin-top: 0;
    border-bottom: 2px solid #61dafb; /* Underline effect */
    padding-bottom: 10px; /* Space below heading */
}

/* List Styles */
ul {
    list-style-type: none; /* Remove default list styling */
    padding: 0;
}

li {
    background-color: #fff; /* White background for list items */
    border: 1px solid #ddd; /* Light border for list items */
    padding: 15px;
    margin-bottom: 10px; /* Space between list items */
    border-radius: 8px; /* Rounded corners */
    transition: background-color 0.3s ease, transform 0.3s ease; /* Smooth transitions */
}

li:hover {
    background-color: #f0f8ff; /* Light blue background on hover */
    transform: scale(1.02); /* Slightly enlarge on hover */
}

/* Button Styles */
button {
    margin-top: 20px;
    padding: 12px 24px;
    background-color: #61dafb; /* Light blue background for button */
    border: none;
    color: white;
    font-size: 1em;
    cursor: pointer;
    border-radius: 8px; /* Rounded corners */
    transition: background-color 0.3s ease; /* Smooth transition for hover effect */
}

button:hover {
    background-color: #21a1f1; /* Darker blue on hover */
}

/* Fun Fact Styles */
#funFact {
    background-color: #f0f8ff; /* Light background for fun fact */
    padding: 15px;
    border: 1px solid #ddd;
    border-radius: 8px;
    margin-top: 20px;
    transition: opacity 0.3s ease; /* Smooth transition for visibility */
}

/* Responsive Design */
@media (max-width: 768px) {
    header h1 {
        font-size: 2em; /* Adjust header size for smaller screens */
    }

    #description {
        font-size: 1em; /* Adjust font size for smaller screens */
    }

    button {
        padding: 10px 20px; /* Adjust button padding */
        font-size: 0.9em; /* Adjust font size for smaller screens */
    }
    
    main {
        padding: 10px; /* Adjust padding for smaller screens */
    }
}

